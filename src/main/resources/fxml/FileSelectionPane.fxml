<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="735.0" prefWidth="1280" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.university.grp20.controller.FileSelectionController">
    <children>
        <Label fx:id="roleLabel" layoutX="25.0" layoutY="24.0" prefWidth="250.0" styleClass="bold-label" stylesheets="@../styles/styles.css" text="Role:">
            <font>
                <Font size="32.0" />
            </font>
        </Label>
        <VBox alignment="CENTER" spacing="30.0" AnchorPane.bottomAnchor="75.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="75.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" styleClass="bold-label" stylesheets="@../styles/styles.css" text="File Import">
                    <font>
                        <Font size="40.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER" spacing="30.0">
                    <children>
                        <VBox alignment="CENTER" spacing="15.0">
                            <children>
                                <Label alignment="CENTER" text="Impression Log">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                                <Label alignment="CENTER" minHeight="50.0" minWidth="110.0" text="Click Log">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                                <Label alignment="CENTER" text="Server Log">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="15.0">
                            <children>
                                <Button fx:id="impressionLogButton" mnemonicParsing="false" onAction="#handleImpressionUpload" prefWidth="120.0" styleClass="blue-button" stylesheets="@../styles/styles.css" text="Select...">
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                                </Button>
                                <Button fx:id="clickLogButton" mnemonicParsing="false" onAction="#handleClickUpload" prefWidth="120.0" styleClass="blue-button" stylesheets="@../styles/styles.css" text="Select...">
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                                </Button>
                                <Button fx:id="serverLogButton" mnemonicParsing="false" onAction="#handleServerUpload" prefWidth="120.0" styleClass="blue-button" stylesheets="@../styles/styles.css" text="Select...">
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                                </Button>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" prefWidth="300.0" spacing="20.0">
                            <children>
                                <Label fx:id="impressionPathLabel" prefHeight="50.0">
                                    <font>
                                        <Font size="10.0" />
                                    </font>
                                </Label>
                                <Label fx:id="clickPathLabel" prefHeight="50.0">
                                    <font>
                                        <Font size="10.0" />
                                    </font>
                                </Label>
                                <Label fx:id="serverPathLabel" prefHeight="50.0">
                                    <font>
                                        <Font size="10.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                    <padding>
                        <Insets left="300.0" />
                    </padding>
                </HBox>
                <Button fx:id="nextButton" disable="true" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#startImport" prefHeight="50.0" prefWidth="120.0" styleClass="blue-button" stylesheets="@../styles/styles.css" text="Next">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
                <VBox alignment="CENTER">
                    <children>
                        <ProgressBar fx:id="importProgressBar" prefHeight="25.0" prefWidth="500.0" progress="0.0" styleClass="custom-progress-bar" stylesheets="@../styles/styles.css">
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </ProgressBar>
                        <Label fx:id="importProgressLabel" alignment="CENTER">
                            <padding>
                                <Insets top="10.0" />
                            </padding>
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </VBox>
        <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" prefHeight="50.0" prefWidth="120.0" styleClass="blue-button" stylesheets="@../styles/styles.css" text="Logout">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="skipButton" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleSkip" prefHeight="50.0" prefWidth="120.0" styleClass="blue-button" stylesheets="@../styles/styles.css" text="Skip">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
      <Button fx:id="helpButton" layoutX="1201.0" layoutY="24.0" mnemonicParsing="false" styleClass="blue-button" text="Click Me!" />
    </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="900.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.university.grp20.controller.ChartController">
   <children>
        <VBox fx:id="chartContainer" prefHeight="900.0" prefWidth="1600.0" spacing="10">
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="1600.0">
                <children>
                    <Button fx:id="backButton" mnemonicParsing="false" onAction="#displayUpload" text="Back">
                  <font>
                     <Font size="24.0" />
                  </font>
                  <HBox.margin>
                     <Insets left="10.0" />
                  </HBox.margin></Button>
                    <Region HBox.hgrow="ALWAYS" />
                    <ToggleButton fx:id="metricsButton" mnemonicParsing="false" onAction="#showDashboard" text="Metrics">
                  <font>
                     <Font size="24.0" />
                  </font></ToggleButton>
                    <ToggleButton fx:id="chartsButton" mnemonicParsing="false" text="Charts">
                  <font>
                     <Font size="24.0" />
                  </font></ToggleButton>
                    <Region HBox.hgrow="ALWAYS" />
                    <Button mnemonicParsing="false" text="Add">
                        <contextMenu>
                            <ContextMenu>
                                <items>
                                    <MenuItem fx:id="impressionsChart" mnemonicParsing="false" onAction="#displayImpressionsChart" text="No Of Impressions" />
                                    <MenuItem fx:id="clicksChart" mnemonicParsing="false" onAction="#displayClicksChart" text="No Of Clicks" />
                                    <MenuItem fx:id="uniquesChart" mnemonicParsing="false" onAction="#displayUniquesChart" text="No Of Uniques" />
                                    <MenuItem fx:id="bouncesChart" mnemonicParsing="false" onAction="#displayBouncesChart" text="No Of Bounces" />
                                    <MenuItem fx:id="conversionsChart" mnemonicParsing="false" onAction="#displayConversionsChart" text="No Of Conversions" />
                                    <MenuItem fx:id="totalCostChart" mnemonicParsing="false" onAction="#displayTotalCostChart" text="Total" />
                                    <MenuItem fx:id="ctrChart" mnemonicParsing="false" onAction="#displayCTRChart" text="CTR" />
                                    <MenuItem fx:id="cpaChart" mnemonicParsing="false" onAction="#displayCPAChart" text="CPA" />
                                    <MenuItem fx:id="cpcChart" mnemonicParsing="false" onAction="#displayCPCChart" text="CPC" />
                                    <MenuItem fx:id="cpmChart" mnemonicParsing="false" onAction="#displayCPMChart" text="CPM" />
                                    <MenuItem fx:id="bounceRateChart" mnemonicParsing="false" onAction="#displayBounceRateChart" text="Bounce Rate" />
                                    <MenuItem fx:id="ccHistogram" mnemonicParsing="false" onAction="#binSizePrompt" text="Click Cost Histogram" />
                                </items>
                            </ContextMenu>
                        </contextMenu>
                  <font>
                     <Font size="24.0" />
                  </font>
                  <HBox.margin>
                     <Insets right="10.0" />
                  </HBox.margin>
                    </Button>
                </children>
            </HBox>
         <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
            <content>
                  <FlowPane fx:id="chartDisplayFlowPane" prefWrapLength="620" />
            </content>
         </ScrollPane>
        </VBox>
   </children>
</AnchorPane>

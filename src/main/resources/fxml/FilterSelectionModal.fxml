<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.*?>

<AnchorPane prefHeight="250.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.university.grp20.controller.FilterSelectionController">
    <children>
        <VBox prefHeight="300.0" prefWidth="450.0">
            <children>
                <Label fx:id="chartNameLabel" prefHeight="48.0" prefWidth="231.0" text="Chart Name">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <GridPane prefHeight="350.0" prefWidth="600.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                  <VBox alignment="CENTER_LEFT" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER">
                     <children>
                              <Button fx:id="applyChangesButton" mnemonicParsing="false" onAction="#applyChanges" text="Apply Changes">
                           <VBox.margin>
                              <Insets left="10.0" />
                           </VBox.margin></Button>
                        <ProgressBar fx:id="filterProgressBar" prefHeight="8.7" prefWidth="231.0" progress="0.0">
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" top="10.0" />
                           </VBox.margin>
                        </ProgressBar>
                        <Label fx:id="filterProgressLabel">
                           <VBox.margin>
                              <Insets left="10.0" />
                           </VBox.margin>
                        </Label>
                     </children>
                  </VBox>
                        <ComboBox fx:id="granularityChooser" prefWidth="150.0" promptText="Time Granularity" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Per Hour" />
                                    <String fx:value="Per Day" />
                                    <String fx:value="Per Week" />
                                </FXCollections>
                            </items>
                        </ComboBox>
                        <Button mnemonicParsing="false" onAction="#quit" text="Quit" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3" GridPane.valignment="CENTER">
                     <GridPane.margin>
                        <Insets right="10.0" />
                     </GridPane.margin></Button>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                            <children>
                                <Label text="Start Date" />
                                <DatePicker fx:id="startDatePicker" />
                                <Label text="End Date" />
                                <DatePicker fx:id="endDatePicker" />
                            </children>
                        </VBox>
                        <HBox prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
                            <children>
                                <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                                    <children>
                                        <RadioButton fx:id="maleRadioButton" mnemonicParsing="false" text="Male" />
                                        <RadioButton fx:id="femaleRadioButton" mnemonicParsing="false" text="Female">
                                            <padding>
                                                <Insets left="15.0" />
                                            </padding>
                                        </RadioButton>
                                    </children>
                                </HBox>
                            </children>
                        </HBox>
                        <CheckComboBox fx:id="ageGroupSelector" prefHeight="25.0" prefWidth="140.0" title="Age Group"
                                       GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1"
                                       GridPane.valignment="CENTER">
                        </CheckComboBox>
                        <CheckComboBox fx:id="incomeSelector" title="Income " GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                        <CheckComboBox fx:id="contextSelector" title="Context" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                    </children>
                </GridPane>
            </children>
        </VBox>
    </children>
</AnchorPane>

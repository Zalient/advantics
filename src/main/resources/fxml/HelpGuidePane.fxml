<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.university.grp20.controller.HelpGuideController">
   <children>
      <HBox layoutX="-1.0" layoutY="458.0" prefHeight="28.0" prefWidth="900.0">
         <children>
            <Button fx:id="prevPicButton" mnemonicParsing="false" onAction="#handlePrev" prefHeight="28.0" prefWidth="66.0" styleClass="blue-button" text="Previous">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="nextPicButton" mnemonicParsing="false" onAction="#handleNext" prefHeight="28.0" prefWidth="66.0" styleClass="blue-button" text="Next">
               <HBox.margin>
                  <Insets bottom="10.0" right="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <StackPane layoutX="110.0" layoutY="59.0" prefHeight="383.0" prefWidth="572.0" styleClass="filter-container">
         <children>
            <ImageView fx:id="imageCarousel" fitHeight="383.0" fitWidth="681.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="TOP_CENTER" />
         </children>
      </StackPane>
      <Label fx:id="guideTitleLabel" alignment="CENTER" layoutX="297.0" layoutY="14.0" prefHeight="34.0" prefWidth="306.0" text="Page Guide">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>

<AnchorPane prefHeight="900.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.university.grp20.controller.DashController">
   <children>
      <HBox alignment="CENTER" layoutY="6.0" prefHeight="100.0" prefWidth="1600.0" AnchorPane.topAnchor="10.0">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#displayUpload" text="Back ">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
               <font>
                  <Font size="24.0" />
               </font></Button>
            <Region prefHeight="32.0" prefWidth="13.0" HBox.hgrow="ALWAYS" />
            <ToggleButton fx:id="metricsButton" mnemonicParsing="false" text="Metrics">
               <font>
                  <Font size="24.0" />
               </font></ToggleButton>
            <ToggleButton fx:id="chartsButton" mnemonicParsing="false" onAction="#showChartsPage" text="Charts">
               <font>
                  <Font size="24.0" />
               </font></ToggleButton>
            <Region prefHeight="32.0" prefWidth="16.0" HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#displayMetricsEditor" text="Edit">
               <HBox.margin>

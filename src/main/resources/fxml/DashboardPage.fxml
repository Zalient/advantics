            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <VBox style="-fx-border-color: black;" styleClass="metric-vbox" stylesheets="@../styles/styles.css">
               <children>
                  <Label text="Number of Impressions">
                     <font>
                        <Font size="24.0" />
                     </font></Label>
                  <Label fx:id="impressionsLabel" wrapText="true">
                     <font>
                        <Font size="24.0" />
                     </font></Label>
               </children></VBox>
            <VBox style="-fx-border-color: black;" styleClass="metric-vbox" stylesheets="@../styles/styles.css" GridPane.columnIndex="1">

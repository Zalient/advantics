                    <Label text="Number of Conversions">
                     <font>
                        <Font size="24.0" />
                     </font></Label>
                    <Label fx:id="conversionsLabel" wrapText="true">
                     <font>
                        <Font size="24.0" />
                     </font></Label>
                </children></VBox>
            <VBox style="-fx-border-color: black;" styleClass="metric-vbox" stylesheets="@../styles/styles.css" GridPane.columnIndex="2" GridPane.rowIndex="1">

                        <padding>
                            <Insets left="10.0" />
                        </padding>
                    </Label>
                </HBox>
                <VBox spacing="15.0">
                    <GridPane alignment="CENTER_LEFT" hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="200.0" />

                        <TextField fx:id="addUsernameField" prefHeight="25.0" prefWidth="205.0" promptText="Enter Username" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <TextField fx:id="addPasswordField" prefHeight="25.0" prefWidth="205.0" promptText="Enter Password" />
                        <HBox alignment="CENTER_LEFT" spacing="10" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">

                        <MenuButton fx:id="selectRoleMenu" mnemonicParsing="false" text="Select Role">
                          <items>
                            <MenuItem mnemonicParsing="false" text="Viewer" />
                            <MenuItem mnemonicParsing="false" text="Editor" />
                              <MenuItem mnemonicParsing="false" text="Admin" />
                          </items>
                        </MenuButton>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
                     <children>
                        <Button fx:id="addUserButton" alignment="CENTER" mnemonicParsing="false" onAction="#handleAddUser" text="Add User" />

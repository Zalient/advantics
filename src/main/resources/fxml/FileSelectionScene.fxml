      </Button>
        <VBox alignment="CENTER" layoutY="95.0" prefHeight="505.0" prefWidth="1280.0" spacing="50.0" AnchorPane.bottomAnchor="120.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="95.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" text="File Import">
                    <font>
                        <Font size="48.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                    <children>
                        <VBox alignment="CENTER" prefHeight="193.0" prefWidth="181.0" spacing="20.0">
                            <children>
                                <Label alignment="CENTER" prefHeight="50.0" text="Impression Log">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                                <Label alignment="CENTER" minHeight="50.0" minWidth="110.0" prefHeight="50.0" text="Click Log">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                                <Label alignment="CENTER" prefHeight="50.0" text="Server Log">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox alignment="TOP_CENTER" prefHeight="193.0" prefWidth="186.0" spacing="20.0">
                            <children>
                                <Button fx:id="impressionLogButton" mnemonicParsing="false" onAction="#handleImpressionUpload" prefHeight="50.0" prefWidth="110.0" stylesheets="@../styles/styles.css" text="Select">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Button>
                                <Button fx:id="clickLogButton" mnemonicParsing="false" onAction="#handleClickUpload" prefHeight="50.0" prefWidth="110.0" stylesheets="@../styles/styles.css" text="Select">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Button>
                                <Button fx:id="serverLogButton" mnemonicParsing="false" onAction="#handleServerUpload" prefHeight="50.0" prefWidth="110.0" stylesheets="@../styles/styles.css" text="Select">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Button fx:id="nextButton" disable="true" mnemonicParsing="false" onAction="#startImport" prefWidth="147.0" stylesheets="@../styles/styles.css" text="Next">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Button>
                <VBox alignment="CENTER" prefHeight="86.0" prefWidth="1280.0">
                    <children>
                        <ProgressBar fx:id="importProgressBar" prefHeight="20.0" prefWidth="529.0" progress="0.0" />
                        <Label fx:id="importProgressLabel" alignment="CENTER" prefHeight="40.0" prefWidth="526.0">
                            <padding>
                                <Insets top="10.0" />
                            </padding>
                            <font>
                                <Font size="25.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </VBox>
      <Label fx:id="roleLabel" layoutX="25.0" layoutY="24.0" prefHeight="28.0" prefWidth="234.0" text="Role:">

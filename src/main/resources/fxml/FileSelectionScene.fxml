<AnchorPane prefHeight="720" prefWidth="1280" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.university.grp20.controller.FileSelectionController">
    <children>
      <Button fx:id="logoutButton" layoutX="25.0" layoutY="634.0" mnemonicParsing="false" onAction="#handleLogout" prefHeight="60.0" prefWidth="140.0" stylesheets="@../styles/styles.css" text="Logout">

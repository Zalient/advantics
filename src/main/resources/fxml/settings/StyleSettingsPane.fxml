<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" prefHeight="506.0" prefWidth="1117.0" styleClass="custom-scroll-pane" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.university.grp20.controller.settings.StyleSettingsController">
<content>
    <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="40.0">
        <children>
            <VBox spacing="20.0">
               <children>
                    <Label fx:id="themeTitle" style="-fx-font-size: 20;" styleClass="bold-label" text="Theme">
                     <font>
                        <Font size="20.0" />
                     </font></Label>
                    <ComboBox fx:id="themeComboBox" prefWidth="170.0" promptText="Select Theme" styleClass="custom-combo-box">
                    </ComboBox>
               </children>
            </VBox>
            <VBox spacing="20.0">
               <children>
                  <Label fx:id="fontTitle" style="-fx-font-size: 20;" styleClass="bold-label" text="Font">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="fontComboBox" prefWidth="170.0" promptText="Select Font" styleClass="custom-combo-box" />
               </children>
            </VBox>
        </children>
        <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
        </padding>
    </VBox>
</content>
</ScrollPane>

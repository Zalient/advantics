<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" focusTraversable="false" prefHeight="506.0" prefWidth="1117.0" styleClass="custom-scroll-pane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.university.grp20.controller.settings.MetricSettingsController">
   <content>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="100.0">
          <children>
              <HBox spacing="50.0">
                  <children>
                      <VBox spacing="10.0">
                          <children>
                              <Label style="-fx-font-size: 20;" styleClass="bold-label" text="Bounce Definition">
                                  <font>
                                      <Font size="20.0" />
                                  </font>
                              </Label>
                        <Label fx:id="bounceDefLabel" prefHeight="24.0" prefWidth="526.0" style="-fx-font-size: 16;" styleClass="bold-label" text="Current Setting: Pages Viewed = 1">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                              <HBox alignment="CENTER" spacing="30.0">
                                  <children>
                                      <RadioButton fx:id="pagesViewedButton" mnemonicParsing="false" onAction="#handleBounceChoice" styleClass="custom-radio-button" text="Pages Viewed" />
                                      <RadioButton fx:id="timeSpentButton" mnemonicParsing="false" onAction="#handleBounceChoice" styleClass="custom-radio-button" text="Time Spent on Page" />
                                  </children>
                                  <VBox.margin>
                                      <Insets right="300.0" />
                                  </VBox.margin>
                           <padding>
                              <Insets bottom="5.0" top="5.0" />
                           </padding>
                              </HBox>
                              <TextField fx:id="bounceValField" disable="true" prefWidth="300.0" promptText="Bounce Value" styleClass="custom-text-field">
                                  <VBox.margin>
                                      <Insets right="300.0" />
                                  </VBox.margin>
                              </TextField>
                              <Button fx:id="applyBounceButton" disable="true" mnemonicParsing="false" onAction="#bounceApply" prefHeight="30.0" prefWidth="90.0" style="-fx-font-size: 12;" styleClass="custom-button" text="Apply">
                           <padding>
                              <Insets top="5.0" />
                           </padding>
                              </Button>
                          </children>
                      </VBox>
                  </children>
                  <VBox.margin>
                      <Insets right="400.0" />
                  </VBox.margin>
              </HBox>
          </children>
          <padding>
              <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
          </padding>
      </VBox>
   </content>
</ScrollPane>

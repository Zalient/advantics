<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="506.0"
      prefWidth="1117.0" spacing="100.0" stylesheets="@../../styles/styles.css" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.university.grp20.controller.settings.MetricSettingsController">
    <children>
        <HBox spacing="50.0">
            <children>
                <VBox spacing="10.0">
                    <children>
                        <Label text="Bounce Definition">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <HBox alignment="CENTER" spacing="30.0">
                            <children>
                                <RadioButton fx:id="pagesViewedButton" mnemonicParsing="false"
                                             onAction="#handleBounceChoice" styleClass="custom-radio-button"
                                             stylesheets="@../../styles/styles.css" text="Pages Viewed">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </RadioButton>
                                <RadioButton fx:id="timeSpentButton" mnemonicParsing="false"
                                             onAction="#handleBounceChoice" styleClass="custom-radio-button"
                                             stylesheets="@../../styles/styles.css" text="Time Spent on Page">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </RadioButton>
                            </children>
                            <VBox.margin>
                                <Insets right="300.0"/>
                            </VBox.margin>
                        </HBox>
                        <TextField fx:id="bounceValueField" disable="true" prefWidth="300.0" promptText="Bounce Value"
                                   styleClass="custom-text-field" stylesheets="@../../styles/styles.css">
                            <font>
                                <Font size="14.0"/>
                            </font>
                            <VBox.margin>
                                <Insets right="300.0"/>
                            </VBox.margin>
                        </TextField>
                        <Button fx:id="applyBounceButton" disable="true" mnemonicParsing="false"
                                onAction="#applyBounceDef" prefHeight="40.0" prefWidth="93.0" styleClass="blue-button"
                                stylesheets="@../../styles/styles.css" text="Apply">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                    </children>
                </VBox>
            </children>
            <VBox.margin>
                <Insets right="400.0"/>
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
    </padding>
</VBox>

                <children>
                    <Label fx:id="themeTitle" styleClass="bold-label" text="Theme">
                     <font>
                        <Font size="16.0" />
                     </font></Label>
                    <ComboBox fx:id="themeComboBox" promptText="Choose Theme" styleClass="blue-combo-box">
                    </ComboBox>
                </children>
            </HBox>
        </children>
        <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
        </padding>
    </VBox>
</content>
</ScrollPane>

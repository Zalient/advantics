<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.PasswordField?>
<ScrollPane fitToWidth="true" prefHeight="506.0" prefWidth="1117.0" styleClass="custom-scroll-pane"
            stylesheets="@../../styles/styles.css" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.university.grp20.controller.settings.UserSettingsController">
    <content>
        <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="40.0"
              stylesheets="@../../styles/styles.css">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="50.0">
                    <VBox.margin>
                        <Insets right="400.0"/>
                    </VBox.margin>
                    <children>
                        <VBox spacing="20.0">
                            <children>
                                <Label text="Add User">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </Label>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Username:">
                                            <font>
                                                <Font size="14.0"/>
                                            </font>
                                        </Label>
                                        <TextField fx:id="newUsernameField" prefWidth="300.0" promptText="Username"
                                                   styleClass="custom-text-field">
                                            <font>
                                                <Font size="14.0"/>
                                            </font>
                                        </TextField>
                                    </children>
                                </VBox>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Password:">
                                            <font>
                                                <Font size="14.0"/>
                                            </font>
                                        </Label>
                                        <PasswordField fx:id="newPasswordField" prefWidth="300.0" promptText="Password"
                                                       styleClass="custom-text-field">
                                            <font>
                                                <Font size="14.0"/>
                                            </font>
                                        </PasswordField>
                                    </children>
                                </VBox>
                                <ComboBox fx:id="newRoleMenu" prefWidth="150.0" promptText="Select Role"
                                          styleClass="blue-combo-box"/>
                                <Button fx:id="addUserButton" mnemonicParsing="false" onAction="#addUser"
                                        prefWidth="150.0" styleClass="blue-button"
                                        stylesheets="@../../styles/styles.css" text="Add User">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox spacing="50.0">
                    <children>
                        <VBox spacing="20.0">
                            <children>
                                <Label text="Edit User">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </Label>
                                <ComboBox fx:id="currentUsersMenu" prefWidth="150.0" promptText="Select User"
                                          styleClass="blue-combo-box"/>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="New Password:">
                                            <font>
                                                <Font size="14.0"/>
                                            </font>
                                        </Label>
                                        <PasswordField fx:id="changePasswordField" prefWidth="300.0"
                                                   promptText="New Password" styleClass="custom-text-field">
                                            <font>
                                                <Font size="14.0"/>
                                            </font>
                                        </PasswordField>
                                    </children>
                                </VBox>
                                <ComboBox fx:id="changeRoleMenu" prefWidth="150.0" promptText="New Role"
                                          styleClass="blue-combo-box"/>
                                <Button fx:id="editUserButton" mnemonicParsing="false"
                                        onAction="#editUser" prefWidth="150.0" styleClass="blue-button"
                                        stylesheets="@../../styles/styles.css" text="Edit User">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
            </padding>
        </VBox>
    </content>
</ScrollPane>
